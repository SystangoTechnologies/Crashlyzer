{{> header}}
  {{> leftbar}}

   <div id="page-content-wrapper">
            <div class="container-fluid">

                <div class="clearfix"></div>    
                <div class="row mar-top-15">
                    <div class="col-lg-12">
		            	<div class="table-responsive data_main_table">
                        {{> flash}}
                        {{#if jsonarr.length}} 
			                <table class="table table-bordered" border="0" cellpadding="0" cellspacing="0">
			                	<tr>
                                    <th width="10%">S No</th>
			                		<th width="10%">User Id</th>
                                    <th width="20%">Email</th>
                                    <th width="30%">Name</th>
			                		<th width="20%">Action</th>
			                	</tr>
                                <tbody>                    
			                	{{#each jsonarr}}
                                    <tr>
                                        <td>{{addOne @key}}</td>
                                        <td>{{user_id}}</td>
                                        <td>{{email}}</td>
                                        <td>{{name}}</td>
                                        {{#if_eq status '===' 'Approved'}}
                                        <td><a href="/users/action/{{email}}/{{status}}" class="icon_link"><img src="/images/disapproved.png" height="20" title="De-activate"></a></td>
                                       {{else}}
                                       <td><a href="/users/action/{{email}}/{{status}}" class="icon_link"><img src="/images/approved.png" height="20" title="Activate"></a></td>
                                        {{/if_eq}}
                                    </tr>
                                {{/each}}
                                
                                </tbody>
			                </table>
                        {{/if}}
		                </div>
		            </div>
		        </div>
            </div>
        </div>
